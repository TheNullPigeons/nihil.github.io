# Maintainer: Goultarde
pkgname=forward-shell
pkgver=1.0.0
pkgrel=1
pkgdesc="Forward shell via GET/POST requests - A web shell exploitation tool"
arch=('any')
url="https://github.com/Goultarde/forward-shell_get-post"
license=('MIT')
depends=('python' 'python-requests')
makedepends=('git')
source=("git+https://github.com/Goultarde/forward-shell_get-post.git")
sha256sums=('SKIP')

package() {
    cd "$srcdir/forward-shell_get-post"
    install -Dm755 forward-shell_get-post.py "$pkgdir/usr/bin/forward-shell"
    install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
    if [ -f LICENSE ]; then
        install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    fi
}
